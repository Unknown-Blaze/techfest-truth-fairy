{
  "manifest_version": 3,
  "name": "Misinformation Fighter",
  "version": "1.0",
  "description": "An extension to combat misinformation using AI.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"] 
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/ext-icon.png"
    }
  },
    "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}